<?xml version="1.0" encoding="utf-8"?>
<Project>

  <PropertyGroup Condition="'$(IsTestProject)' != 'true'">
    <VersionToolName Condition="'$(UsingToolNerdbankGitVersioning)' == 'true'">Nerdbank.GitVersioning</VersionToolName>
  </PropertyGroup>
  
  <PropertyGroup>
    <_UpdateAssemblyVersionOnBuild Condition="'$(_UpdateAssemblyVersionOnBuild)' == ''">$(IsPackable)</_UpdateAssemblyVersionOnBuild>
  </PropertyGroup>

  <!-- Import specialized props files of supported coverage report generator -->
  <Import Project="$(MSBuildThisFileDirectory)$(VersionToolName)\$(VersionToolName).props" Condition="'$(VersionToolName)' != '' and '$(_UpdateAssemblyVersionOnBuild)' == 'true' and Exists('$(MSBuildThisFileDirectory)$(VersionToolName)\$(VersionToolName).props')"/>

</Project>
